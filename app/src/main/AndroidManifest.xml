<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <!-- Required to restart the midnight alarm after the phone restarts -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DailyVerse"
        tools:targetApi="31">

        <!--
           This receiver handles the notification logic via WorkManager.
           If you are using the DailyWorker class we built, you might not strictly need this
           receiver line unless you have a separate file named DailyNotificationReceiver.kt.
           I'll leave it here in case you have legacy code using it.
        -->
        <receiver android:name=".DailyNotificationReceiver" />

        <!--
            CRITICAL FIX: This receiver MUST be exported and have intent filters
            to listen for system events (Time change, Reboot, etc.)
        -->
        <receiver
            android:name=".WidgetUpdateReceiver"
            android:exported="true">
            <intent-filter>
                <!-- Custom Action for our Alarm -->
                <action android:name="com.example.dailyverse.MIDNIGHT_UPDATE" />

                <!-- System Actions for Reboots & Manual Time Changes -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.TIME_SET" />
                <action android:name="android.intent.action.TIMEZONE_CHANGED" />
                <action android:name="android.intent.action.DATE_CHANGED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".DailyVerseWidget"
            android:exported="true">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/daily_verse_widget_info" />
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.DailyVerse">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.DailyVerse" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/brand_primary</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>

        <item name="android:windowBackground">@color/bg_main</item>

        <item name="android:navigationBarColor">@color/bg_bottom_bar</item>

        <item name="android:windowLightNavigationBar" tools:targetApi="27">?attr/isLightTheme</item>
    </style>

    <style name="Theme.DailyVerse" parent="Base.Theme.DailyVerse" />

    <style name="Theme.DailyVerse.AppWidgetContainer" parent="Theme.DailyVerse">
        <item name="appWidgetRadius">16dp</item>
        <item name="appWidgetInnerRadius">8dp</item>
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:theme="@style/Theme.DailyVerse.AppWidgetContainer">

    <!-- Title (Changed to DAILY VERSE) -->
    <TextView
        android:id="@+id/widgetTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DAILY VERSE"
        android:textSize="12sp"
        android:textColor="#5C6BC0"
        android:textStyle="bold"
        android:letterSpacing="0.1" />

    <!-- Content -->
    <TextView
        android:id="@+id/widgetContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widgetTitle"
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:textSize="20sp"
        android:fontFamily="serif"
        android:textColor="#333333"
        android:maxLines="5"
        android:ellipsize="end" />

    <!-- Prompt -->
    <TextView
        android:id="@+id/widgetPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Tap to reveal verse â†’"
        android:textSize="12sp"
        android:textStyle="italic"
        android:textColor="#888888" />

</RelativeLayout>